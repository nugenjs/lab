generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
  url      = "postgresql://keeper:raspi3@mqtt.io:5432/bookkeeper?schema=public"
}

model DeviceStateHistory {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  state      Json
  device     Device   @relation(fields: [deviceName], references: [name])
  deviceName String
}

model Device {
  name               String               @id
  bio                String?
  DeviceStateHistory DeviceStateHistory[]
}
